{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build_make",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--no-warn-unused-cli",
        "-DCMAKE_BUILD_TYPE:STRING=Debug",
        "-DCMAKE_EXPORT_COMPILE_COMMANDS:BOOL=TRUE",
        // "-DCMAKE_C_COMPILER:FILEPATH=C:\\mingw32\bin\\gcc.exe",
        // "-DCMAKE_CXX_COMPILER:FILEPATH=C:\\mingw32\bin\\g++.exe",
        "${workspaceFolder}",
        "-B${workspaceFolder}/build/",
        "-G \"MinGW Makefiles\"",
      ],
      "group": {
          "kind": "build",
          "isDefault": true
      }
    }
  ]
}


