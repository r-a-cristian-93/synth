{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build C++ with CMake",
        "type": "shell",
        "command": "cmake",
        "args": ["-B${workspaceFolder}/build"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "make build",
        "type": "shell",
        "command": "make",
        "args": ["-C", "${workspaceFolder}/build"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "dependsOn": ["build C++ with CMake"],
      }
    ]
  }
  