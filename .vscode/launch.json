{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C++ Debug",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/Synth.exe", // Path to your compiled executable
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build_make", // Specify the task to compile your code before debugging
      "miDebuggerPath": "C:/mingw32/bin/gdb.exe", // Path to your gdb executable
      "logging": {
        "engineLogging": true,
        "trace": true
      },
    },
